#!/usr/bin/env bash

set -e

export nx_mux_root=$(nex _plugin mux)
source $nx_mux_root/src/config/fn.sh

main() {
  handle_empty $@
  try_function $@
  try_script $@
}

handle_empty() {
  if [ -z "$1" ]; then
    mux_new
    exit
  fi
}

try_function() {
  local fn=mux_$1
  if [[ $(type -t $fn ) == function ]]; then
    $fn "${@:2}"
    exit
  fi
}

try_script() {
  local name="$1"
  sh $nx_mux_root/src/mux/$name.sh
  exit
}

# mux_*
mux_new() {
  local name=$(tmux-new-session-name)
  if [[ "$(pwd)" == $HOME ]]; then
    mux home
  else
    tmux-aoc $name
  fi
}

mux_list() {
  tmux list-sessions
  echo
}

main "$@"
