#!/usr/bin/env bash

set -e

export nx_mux_root=$(nex _plugin mux)

main() {
  handle_empty $@
  try_function $@
  try_script $@
}

handle_empty() {
  if [ -z "$1" ]; then
    mux_create_session
    exit
  fi
}

try_function() {
  local fn=mux_$1
  if [[ $(type -t $fn ) == function ]]; then
    $fn "${@:2}"
    exit
  fi
}

try_script() {
  local name="$1"
  if [[ -f "$nx_mux_root/src/mux/work/$name.sh" ]]; then
    sh $nx_mux_root/src/mux/work/$name.sh
    exit
  elif [[ -f "$nx_mux_root/src/mux/$name.sh" ]]; then
    sh $nx_mux_root/src/mux/$name.sh
    exit
  else
    echo " not found: mux $name"
  fi
}

mux_create_session() {
  local name=$(tmux-new-session-name)
  if [[ "$(pwd)" == $HOME ]]; then
    mux home
  else
    tmux-aoc $name
  fi
}

mux_list() {
  tmux list-sessions
  echo
}

main "$@"
